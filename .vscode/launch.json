{
  // Build library and then debug Godot.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "lldb",
      "preLaunchTask": "rust: cargo build",
      "program": "${env:GODOT4_BIN}",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
      "args": [
        "--path",
        "${workspaceFolder}/godot"
      ]
    }
  ]
}